<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <!--扩大oval 达到掩盖四角的效果-->
    <item android:left="-10dp" android:right="-10dp" android:top="-10dp" android:bottom="-10dp">

          <shape android:shape="oval">
              <stroke android:color="#ffffff" android:width="10dp"/>
              <!-- oval_inner_size[大小(除去边线)] ，也是最终裸露出来的圆形图像区域-->
              <size android:width="50dp" android:height="50dp"/>
              <!-- 使oval_inner透明，裸露出将来设置的背景图片 -->
              <gradient android:centerColor="#0000"/>

          </shape>


    </item>

</layer-list>