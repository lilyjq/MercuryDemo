<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



  <LinearLayout
      android:id="@+id/top"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/color_one"
      app:layout_behavior=".behavior.HomeTopBehavior"
      android:orientation="vertical"
      android:backgroundTint="@color/colorPrimary"
      >
    <TextView
        android:id="@+id/tv_top"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/color_pink"
        android:text="@string/text_long"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:id="@+id/tv_center"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/color_yellow"
        android:text="@string/text_long"
        app:layout_constraintTop_toBottomOf="@+id/tv_top"
        />



    <TextView
        android:id="@+id/tv_bottom"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/color_one"
        android:text="@string/text_long"
        app:layout_constraintTop_toBottomOf="@+id/tv_center"
        />


    <TextView
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/textColorFive"
        android:text="@string/text_long"
        app:layout_constraintTop_toBottomOf="@+id/tv_center"
        />



  </LinearLayout>


  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recyclerview"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_behavior=".behavior.HomeRecyclerViewBehavior"
      >

  </androidx.recyclerview.widget.RecyclerView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>