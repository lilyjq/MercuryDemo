<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/textColorThree"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_pink"
            android:padding="10dp"
            android:text="@string/tab4"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/textColorSecond"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:text="@string/tab4"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toTopOf="@+id/tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_one"
            android:padding="10dp"
            android:text="@string/tab4"
            android:textColor="#ffffff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>



        <TextView
            android:id="@+id/tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_two"
            android:padding="10dp"
            android:text="@string/tab4"
            android:textColor="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guid_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="vertical"/>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guid_line"
        app:layout_constraintTop_toBottomOf="@id/root"
        android:text="Slide"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:padding="10dp"
        android:background="@color/color_yellow"/>


    <TextView
        android:id="@+id/tv2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guid_line"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        android:layout_marginTop="20dp"
        android:text="explode"
        android:textColor="#ffffff"
        android:gravity="center"
        android:padding="10dp"
        android:background="@color/color_yellow"/>

    <TextView
        android:id="@+id/tv3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guid_line"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        android:text="fade"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:padding="10dp"
        android:background="@color/color_yellow"/>

    <TextView
        android:id="@+id/tv4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guid_line"
        app:layout_constraintTop_toBottomOf="@id/tv3"
        android:text="fade+explode"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:padding="10dp"
        android:background="@color/color_yellow"/>

    <TextView
        android:id="@+id/tv5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guid_line"
        app:layout_constraintTop_toBottomOf="@id/tv4"
        android:text="changeBounds"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:padding="10dp"
        android:background="@color/color_yellow"/>


    <TextView
        android:id="@+id/tv6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guid_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/root"
        android:text="changeClipBounds"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:padding="10dp"
        android:background="@color/color_yellow"/>

    <TextView
        android:id="@+id/tv7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guid_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv6"
        android:text="changeScroll"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:padding="10dp"
        android:background="@color/color_yellow"/>

    <TextView
        android:id="@+id/tv8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guid_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv7"
        android:text="ChangeTransform"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:padding="10dp"
        android:background="@color/color_yellow"/>
    <TextView
        android:id="@+id/tv9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guid_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv8"
        android:text="ChangeTextTransition"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:padding="10dp"
        android:background="@color/color_yellow"/>

    <TextView
        android:id="@+id/tv10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guid_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv9"
        android:text="ChangeTextTransition2"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:padding="10dp"
        android:background="@color/color_yellow"/>

</androidx.constraintlayout.widget.ConstraintLayout>