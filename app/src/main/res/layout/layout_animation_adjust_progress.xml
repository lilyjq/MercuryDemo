<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    >


  <com.mercury.demo.view.AnimationValueView
      android:id="@+id/defualt_view"
      android:layout_width="0dp"
      android:layout_height="4dp"
      android:layout_marginEnd="48dp"
      android:layout_marginStart="48dp"
      android:padding="5dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />


  <View
      android:id="@+id/left_ball"
      android:layout_width="16dp"
      android:layout_height="16dp"
      android:background="@drawable/bg_pink_23"
      android:visibility="visible"
      app:layout_constraintBottom_toBottomOf="@id/defualt_view"
      app:layout_constraintEnd_toEndOf="@+id/defualt_view"
      app:layout_constraintHorizontal_bias="0"
      app:layout_constraintStart_toStartOf="@+id/defualt_view"
      app:layout_constraintTop_toTopOf="@id/defualt_view"
      />


  <View
      android:id="@+id/right_ball"
      android:layout_width="16dp"
      android:layout_height="16dp"
      android:background="@drawable/bg_yellow_23"
      android:visibility="visible"
      app:layout_constraintBottom_toBottomOf="@id/defualt_view"
      app:layout_constraintEnd_toEndOf="@+id/defualt_view"
      app:layout_constraintHorizontal_bias="1"
      app:layout_constraintStart_toStartOf="@+id/defualt_view"
      app:layout_constraintTop_toTopOf="@id/defualt_view"
      />


</androidx.constraintlayout.widget.ConstraintLayout>